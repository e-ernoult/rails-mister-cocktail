<% url = image_path("banner.jpeg") %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= url %>');">
  <div class="banner-content">
    <h1>LE WAGON COCKTAILS BAR</h1>
    <p>Change your life, learn to cocktails</p>
  </div>
</div>

<div class="container margin-top">
  <div class="row">
    <h2 class="monoton-font text-center">OUR BEST COCKTAILS</h2>
    <p class="text-center"><i class="fas fa-star fa-2x"></i></p>
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.url.nil? %>
        <% url = image_path 'placeholder.jpeg' %>
      <% else %>
        <% url = cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>
      <% end %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= url %>'); background-size: cover">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
            <p>Very cool cocktail</p>
          </div>
          <%= link_to "", cocktail_path(cocktail.id), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
