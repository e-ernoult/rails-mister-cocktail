<div class="navbar-wagon">
  <%= link_to "COCKTAILS", cocktails_path, class: 'navbar-wagon-brand' %>

  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= form_tag(cocktails_path, method: :get, class: 'form-inline') do %>
      <%= text_field_tag :search, nil, placeholder: 'Search' %>
      <%= submit_tag 'Search', class: 'btn' %>
    <% end %>

    <%= link_to "Add a cocktail", new_cocktail_path, class: 'btn navbar-wagon-link' %>
  </div>
</div>
